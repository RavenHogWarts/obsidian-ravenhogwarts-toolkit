# 发布正式版 例如: make release v=1.0.0
release:
	@git tag "v$(v)"
	@git push origin "v$(v)"

# 发布测试版 例如: make beta v=1.0.0-beta.1
beta:
	@git tag "v$(v)"
	@git push origin "v$(v)"

# 删除某个版本 例如: make del v=1.0.0
del:
	@git tag -d "v$(v)"
	@git push origin --delete "v$(v)"

# 向后兼容的旧命令
push:
	@git tag "$(tag)"
	@git push origin "$(tag)"